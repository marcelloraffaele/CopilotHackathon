@page
@model IndexModel
@{
    ViewData["Title"] = "Memory Game";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">Memory Game</h1>
    <div class="row mb-3 justify-content-center">
        <div class="col-md-3">
            <label for="gridSize" class="form-label">Grid Size</label>
            <select id="gridSize" class="form-select">
                <option value="4">4 x 4</option>
                <option value="6">6 x 6</option>
                <option value="8">8 x 8</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="playerCount" class="form-label">Number of Players</label>
            <select id="playerCount" class="form-select">
                <option value="1">1 Player</option>
                <option value="2">2 Players</option>
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button id="startGameBtn" class="btn btn-primary w-100">Start Game</button>
        </div>
    </div>
    <div id="gameStatus" class="mb-3 text-center"></div>
    <div id="gameGrid" class="memory-grid mx-auto"></div>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}
